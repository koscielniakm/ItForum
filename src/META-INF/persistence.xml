<?xml version="1.0" encoding="UTF-8" ?>
<persistence 
	xmlns="http://java.sun.com/xml/ns/persistence"            
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
 	version="2.0">
	<persistence-unit name="ForumPersistenceUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/forumdb" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"></property>
			<property name="hibernate.hbm2dll.auto" value="create-drop" />
		</properties>
	</persistence-unit>
</persistence>